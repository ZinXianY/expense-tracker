<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="from-group">
          <label for="name">姓名</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
        </div>
        <div class="from-group">
          <label for="email" class="mt-2">信箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}">
        </div>
        <div class="from-group">
          <label for="password" class="mt-2">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}">
        </div>
        <div class="from-group">
          <label for="confrimPassword" class="mt-2">確認密碼</label>
          <input type="password" id="confrimPassword" name="confrimPassword" class="form-control"
            placeholder="Confrim Password" value="{{ confrimPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3">註冊</button>
      </form>
      <p class="lead mt-4">
        註冊完成? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>