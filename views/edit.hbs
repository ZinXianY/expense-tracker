<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <form method="POST" action="/records/{{ record._id }}/?_method=PUT">
        <div class="row align-items-center mb-3">
          <h6 class="col-4">* 為必填欄位</h6>
          <h2 class="col-8">修改支出內容</h4>
        </div>
        <div class="form-group form-row">
          <label for="name" class="col-md-4 col-form-label">
            名稱* :
          </label>
          <div class="input-group mb-1 mr-5">
            <input type="text" name="name" class="form-control" id="name" value="{{ record.name }}" required>
          </div>
        </div>

        <div class="form-group form-row mb-2 align-items-center">
          <label for="date" class="col-md-4 col-form-label">日期* :
          </label>
          <div class="input-group mb-1 mr-5">
            <input type="date" class="form-control" id="date" name="date" value="{{ record.date }}" required>
          </div>
        </div>

        <div class="form-group form-row mb-2 align-items-center">
          <label for="category" class="col-md-4 col-form-label">類別* :
          </label>
          <div class="input-group mb-1 mr-5">
            <select class="custom-select" type="text" id="category" name="category" required>
              <option selected value="{{ record.category }}">選擇類別...</option>
              <option value="home">家居物業</option>
              <option value="transportation">交通出行</option>
              <option value="amusement">休閒娛樂</option>
              <option value="food">餐飲食品</option>
              <option value="other">其他</option>
            </select>
          </div>
        </div>

        <div class="form-group form-row mb-2 align-items-center">
          <label for="amount" class="col-md-4 col-form-label">金額* :
          </label>
          <div class="input-group mb-1 mr-5">
            <input type="number" class="form-control" id="amount" name="amount" min="0" value="{{ record.amount }}"
              required>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <button class="btn btn-success mr-2" type="submit">儲存</button>
          <a href="/" class="btn btn-danger" type="submit">返回</a>
        </div>
      </form>
    </div>
  </div>
</div>