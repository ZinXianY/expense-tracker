<!-- 總金額 -->
<div class="container mt-5">
  <div class="row d-flex justify-content-center col-8">
    <h4 class="mr-5">總支出金額 :</h4>
    <h2 class="ml-5">2000</h2>
  </div>

  <!-- 排序 -->
  <div class="d-flex justify-content-end">
    <form class="" action="">
      <div class="form-group">
        <select class="form-control btn btn-secondary mt-5" name="" id="" onchange="this.form.submit()">
          <option value="" disabled selected>選擇支出類別 :</option>
          <option value="name">家具物業</option>
          <option value="-name">交通出行</option>
          <option value="category">休閒娛樂</option>
          <option value="location">餐飲食品</option>
          <option value="rating">其他</option>
        </select>
      </div>
    </form>
  </div>

  <!-- 支出表單 -->
  <div class="row mx-auto col-8">
    <ul class="list-group">
      {{#each records}}
      <div class="record mb-3">
        <li class="list-group-item d-flex justify-content-between">
          <div class="col-1 my-0  d-flex align-items-center">
            <i class="{{ this.icon }} fa-4x"></i>
          </div>
          <div class="record-detail col-8 ml-5 mt-2 px-auto">
            <h4 class="record-title font-weight-bold">{{ this.name }}</h4>
            <p class="record-date">{{ this.date }}</p>
          </div>

          <div class="record-amount col-3 d-flex align-items-center">
            <p><span>{{ this.amount }}</span>元</p>
          </div>

          <div class="record-button col-4 d-flex justify-content-end align-items-center">
            <a class="btn btn-primary" href="/records/{{ this._id}}/edit" type="submit">修改</a>
            <form action="" method="" class="ml-2">
              <button class="btn btn-danger" type="submit">刪除</button>
            </form>
          </div>
        </li>
      </div>
      {{/each}}
    </ul>
  </div>
</div>